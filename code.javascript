// Handle "Read More" clicks on index.html
document.addEventListener('DOMContentLoaded', () => {
    const readMoreButtons = document.querySelectorAll('.read-more');
    readMoreButtons.forEach(button => {
        button.addEventListener('click', (e) => {
            const articleId = e.target.closest('.news-card').dataset.id;
            window.location.href = `article.html?id=${articleId}`;
        });
    });

    // Load article on article.html
    const urlParams = new URLSearchParams(window.location.search);
    const articleId = urlParams.get('id');
    if (articleId && articles[articleId]) {
        const article = articles[articleId];
        document.getElementById('article-title').textContent = article.title[currentLang];
        document.getElementById('article-image').src = article.image;
        document.getElementById('article-content').textContent = article.content[currentLang];
        document.getElementById('article-type').textContent = article.type;
        document.getElementById('article-author').textContent = article.author;
    }
});

// Language toggle
let currentLang = 'id'; // Default to Indonesian

document.getElementById('lang-toggle').addEventListener('click', () => {
    currentLang = currentLang === 'id' ? 'en' : 'id';
    document.getElementById('lang-toggle').textContent = currentLang === 'id' ? 'EN' : 'ID';
    updateLanguage();
});

function updateLanguage() {
    const elements = document.querySelectorAll('[data-lang-id]');
    elements.forEach(el => {
        el.textContent = el.getAttribute(`data-lang-${currentLang}`);
    });
    loadWrittenNews(); // Reload news in new language

    // Update article if on article.html
    const urlParams = new URLSearchParams(window.location.search);
    const articleId = urlParams.get('id');
    if (articleId && articles[articleId]) {
        const article = articles[articleId];
        document.getElementById('article-title').textContent = article.title[currentLang];
        document.getElementById('article-content').textContent = article.content[currentLang];
    }
}

// Load written news
function loadWrittenNews() {
    const grid = document.getElementById('written-news-grid');
    grid.innerHTML = '';
    Object.keys(articles).forEach(id => {
        const article = articles[id];
        const card = document.createElement('div');
        card.className = 'news-card';        card.dataset.id = id; // Add data-id to the card        card.innerHTML = `
            <img src="${article.image}" style="width:100%; height:220px; object-fit:cover;" alt="${article.title[currentLang]}">
            <div class="news-content">
                <h3>${article.title[currentLang]}</h3>
                <small>${article.type}  ${article.author}  NeulinkNews</small>
                <p>${article.content[currentLang].substring(0, 100)}...</p>
                <button class="read-more" data-id="${id}" style="background:#0EA5E9; color:white; border:none; padding:5px 10px; border-radius:5px; cursor:pointer; margin-top:10px;">Read More</button>
            </div>
        `;
        grid.appendChild(card);
    });
}

// CMS form submit
document.getElementById('cms-form').addEventListener('submit', (e) => {
    e.preventDefault();
    const title = document.getElementById('article-title').value;
    const type = document.getElementById('article-type').value;
    const author = document.getElementById('article-author').value;
    const image = document.getElementById('article-image').value || "https://source.unsplash.com/featured/?news";
    const content = document.getElementById('article-content').value;
    const newId = Object.keys(articles).length + 1;
    articles[newId] = {
        title: { id: title, en: title }, // Assume same for both, or translate later
        image: image,
        content: { id: content, en: content },
        type: type,
        author: author
    };
    // Save to localStorage
    localStorage.setItem('articles', JSON.stringify(articles));
    loadWrittenNews();
    document.getElementById('cms-form').reset();
    alert('Berita ditambahkan!');
});

// Load articles from localStorage if available
const savedArticles = localStorage.getItem('articles');
if (savedArticles) {
    Object.assign(articles, JSON.parse(savedArticles));
}

// Initial load
document.addEventListener('DOMContentLoaded', () => {
    loadWrittenNews();
    updateLanguage();
});
